{
  "name": "donnie.damato.design",
  "version": "1.0.0",
  "description": "donnie.damato.design",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf _site",
    "copy": "mkdir -p _site && cp -r root/. _site",
    "compile": "nunjucks *.tpl -p templates -o _site/",
    "components":"rollup src/components/**/*.js --file _site/components.iife.js --format iife -p html -p 'postcss={ inject: false }' -p terser",
    "build": "rm -rf _site && npm run compile && npm run copy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/damato-design/donnie.git"
  },
