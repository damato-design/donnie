    "url": "https://github.com/damato-design/donnie/issues"
  },
  "homepage": "https://github.com/damato-design/donnie#readme",
  "devDependencies": {
    "nunjucks": "^3.2.2",
    "nunjucks-cli": "^1.0.0",
    "rollup": "^2.79.1",
    "rollup-plugin-html": "^0.2.1",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-terser": "^7.0.2"
  }
}
