---
import { ViewTransitions } from 'astro:transitions';
const { 
    title = "Donnie D'Amato", 
    description = "Design Systems Architect"
} = Astro.props;
const ogImage = new URL('og-image.png', Astro.url);
---

<head>
    <meta charset="UTF-8">
    <meta name="description" content={ description }>
    <meta name="viewport" content="width=device-width">
    <meta name="generator" content={Astro.generator}>
    <title>{title}</title>
    <ViewTransitions />
    <meta property="og:title" content={ title }>
    <meta property="og:description" content={ description }>
    <meta property="og:url" content={ Astro.url }>
    <meta property="og:image" content={ ogImage }>
    <meta property="og:image:type" content="image/png">
    <meta property="og:image:width" content="1200">
    <meta property="og:image:height" content="630">
    <meta property="og:image:alt" content={ title }>
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">
    <meta name="msapplication-TileColor" content="#b91d47">
    <meta name="theme-color" content="#ffffff">
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:creator" content="@donniedamato" />
    <meta name="twitter:creator:id" content="230538553" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Permanent+Marker&display=swap" rel="stylesheet">

    <script type="application/ld+json">
        {
          "@context": "https://schema.org",
          "@type": "ProfilePage",
          "dateCreated": "2020-05-07T12:34:00-05:00",
          "dateModified": "2023-12-14T14:53:00-05:00",
          "mainEntity": {
            "@id": "#main-author",
            "@type": "Person",
            "name": "Donnie D'Amato",
            "alternateName": "donniedamato",
            "description": "Design Systems Architect",
            "image": "http://donnie.damato.design/images/donnie.jpg",
            "sameAs": [
              "https://twitter.com/donniedamato",
              "https://linkedin.com/in/fauxserious",
              "https://github.com/fauxserious",
              "https://social.design.systems/@donnie",
              "https://bsky.app/profile/donnie.damato.design",
              "https://adplist.org/mentors/donnie-damato",
              "https://www.threads.net/@donniedamato"
            ]
          }
        }
    </script>

    <style is:global>
        *, :before, :after {
            box-sizing: border-box;
        }

        html {
            scroll-behavior: auto;
        }

        body {
            margin: 0;
            font-family: 'Nimbus Mono PS', 'Courier New', monospace;
            overscroll-behavior-y: none;
        }

        body {
            background-image: url(/images/yellow-bkgd-top.jpg);
            background-size: 400px;
            background-repeat: no-repeat;
            background-color: #fdd900;
            background-position: left top;
            overflow-x: hidden;
        }

        a {
            color: inherit;
        }
    </style>
</head>