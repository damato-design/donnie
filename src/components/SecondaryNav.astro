---
import Section from "@components/Section.astro"
import Arrow from '@assets/arrow.svg';
import Tearout from '@components/Tearout.astro';
---

<style>
    .arrow {
        margin-top: 16px;
        margin-bottom: auto;
        width: 70px;
    }

    p {
        margin: 0;
    }

    @media (max-width: 900px) {

        .stroke {
            -webkit-text-stroke: .5em var(--bg);
            paint-order: stroke fill;
        }

        .arrow {
            transform: scaleX(-1) translateX(100%) rotate(100deg) ;
            position: absolute;
            right: 0;
            top: -25%;
        }
    }
</style>

<Tearout id="secondary" aria-live="polite" style="flex: 3">
    <Section level="secondary">
        <p slot="leading" class="stroke">Use the navigation over here to explore the site.</p>
        <div class="arrow">
            <Arrow/>
        </div>
        <p slot="trailing" class="stroke">&copy; Donnie D'Amato. All rights reserved.</p>
    </Section>
</Tearout>