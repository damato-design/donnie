---
const { level, rugged = true } = Astro.props;
const Tag = typeof level === 'string' ? 'nav' : 'div';
---

<style>
    .section {
        grid-area: 1 / 1 / -1 / -1;
        display: flex;
        flex-direction: column;
        padding: 32px;
        height: 100%;
        background: var(--bg);
    }

    nav.content {
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .content:not(nav) {
        max-width: 40ch;
    }

    .trailing {
        font-size: .8em;
        text-wrap: balance;
    }
</style>

<div>
    <div class:list={['section', { rugged }]}>
        <div class="leading">
            <slot name="leading"/>
        </div>
        <Tag class="content" aria-label={ level }>
            <slot/>
        </Tag>
        <div class="trailing">
            <slot name="trailing"/>
        </div>
    </div>
</div>