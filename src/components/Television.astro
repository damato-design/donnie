<style>

  .scene {
    max-width: 600px;
    margin-inline: auto;
    display: grid;
    grid-template-rows: auto 6rem;
  }

  .television {
    --color: #f4ebe4;
    box-shadow: 
      2px -2px 2px color-mix(in srgb, var(--color), black 30%) inset, 
      2px 1px 1px #fff inset,
      -24px 10px 32px 0 color-mix(in srgb,#000,transparent 70%);
    background-color: var(--color);
    background-image: linear-gradient(-120deg, var(--color), color-mix(in srgb, var(--color), black 20%));
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 2rem;
    isolation: isolate;
    grid-row: 1;
  }

  .television-face {
    background: linear-gradient(to bottom, #444 5%, #333 35% 45%);
    border-bottom: 1px solid #888;
    box-shadow: 0 1px 2px #470404 inset;
    display: grid;
    grid-template-columns: 4fr 1fr;
    border-radius: .5rem;
    padding: 4%;
    gap: 4%;
    flex: 1;
  }

  .television-frame {
    border: 1px solid #222;
    box-shadow: 0 2px 2px #888, 2px 0 2px #444, -2px 0 2px #444, 0 -2px 2px #111;
    border-radius: 4rem / 3rem;
    overflow: hidden;
    display: flex;
    aspect-ratio: 4/3;
    justify-content: center;
    position: relative;
    align-items: center;
    background: 
      linear-gradient(70deg, #555 15%, transparent 30%),
      repeating-conic-gradient(#111 0 30deg, #222 60deg, #111 90deg);
  }

  .television-frame:after {
    content: '';
    background: linear-gradient(to bottom, transparent, #aaa4, #8881, #6664, #4445, #2228, #4443, transparent), repeating-linear-gradient(transparent 0 2px, #25242950 2px 4px);
    background-position-y: 0;
    animation: moveBand 8s linear infinite;
    position: absolute;
    inset: 0;
    opacity: .4;
  }

  @keyframes moveBand {
    to { background-position-y: 400px; }
  }

  .television-content {
    color: white;
  }

  .control-panel {
    display: flex;
    flex-direction: column;
    gap: .5em;
  }

  .dials {
    border: 2px solid #333;
    border-left: 1px solid #444;
    border-bottom: 2px solid #444;
    border-radius: 5px;
    box-shadow: -2px 2px 6px #111 inset, -1px 2px 3px #333;
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: .5em;
    align-items: center;
    padding: 10%;
    background: #333;
  }

  .dial {
    border: .25em solid #111;
    border-radius: 50%;
    box-shadow: -4px 2px 4px #444, 0 0 1px 2px #444;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
    aspect-ratio: 1;
    width: 80%;
    background: conic-gradient(#eee 0deg 45deg, #666 70deg 285deg, #eee 320deg);
  }

  .dial:after {
    content: '';
    position: absolute;
    width: 75%;
    background: linear-gradient(#666 30%, #aaa 40%);
    box-shadow: 0 6px 14px #000, 0 0 11px 2px #222;
    height: .25em;
    border: 1px solid #444;
    transform: rotate(var(--turn));
    transition: transform 0.25s linear;
  }

  .speakers {
    flex: 1;
    --s: 10%;
    --c1: #444;
    --c2: #111;
    background:  radial-gradient(
      var(--c2) 50%,
      var(--c1) 52% 55%,
      transparent 57%)
      0 0/var(--s) var(--s);
    background-clip: content-box;
    padding: 4%;
    background-position: center;
  }

  .buttons {
    display: flex;
    justify-content: space-around;
  }

  button {
    aspect-ratio: 1;
    border-radius: 50%;
    border-width: .25em;
    background: linear-gradient(to bottom, #fff 40%, #aaa 50% 55%, #666 70%);
    box-shadow: -1px -1px 1px 2px #000;
    width: 20%;
  }

  .legs {
    display: flex;
    justify-content: space-around;
    grid-row: 2;
    overflow: hidden;
  }

  .legs:before,
  .legs:after {
    content: '';
    background-image: linear-gradient(-90deg,#f2daad 0%,#d1945c 48%,#ab6b35 83%);
    width: 5%;
    height: 120%;
    box-shadow: inset 0 40px 20px -10px rgba(0,0,0,.4);
    clip-path: polygon(0 0, 100% 0, 80% 100%, 20% 100%);
    transform-origin: center top;
  }

  .legs:before {
    transform: translatey(-.1rem) rotatez(9deg);
  }

  .legs:after {
    transform: translatey(-.1rem) rotatez(-9deg);
  }
</style>

<div class="scene">
  <div class="legs"></div>
  <div class="television">
    <div class="television-face">
      <div class="television-frame">
        <div class="television-content"><slot/></div>
      </div>
      <div class="control-panel">
        <div class="dials">
          <div class="dial" style="--turn: .4turn"></div>
          <div class="dial" style="--turn: .6turn"></div>
        </div>
        <div class="speakers"></div>
        <div class="buttons">
          <button></button>
          <button></button>
        </div>
      </div>
    </div>
  </div>
</div>