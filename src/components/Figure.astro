---
import { Image } from 'astro:assets';
const { 
    image,
    headline,
    year,
    hover
} = Astro.props;
---

<style>
    figure {
        position: relative;
        max-width: 100%;
        margin: 0;
        flex: 1 0 150px;
        display: flex;
        flex-direction: column;
        gap: 1rem;
        align-self: start;
    }

    img {
        width: 100%;
        height: auto;
        border: 1px solid color-mix(in srgb, black, white 50%);
        margin-inline-start: auto;
        transition: filter .4s ease-in-out;
    }

    img[src="#"] {
        aspect-ratio: 1;
        background-color: #ccc;
        display: block;
        padding: 1rem;
    }

    figcaption {
        text-align: right;
        inset: 1rem;
        transition: 0s linear;
    }

    h2 {
        margin: 0;
        line-height: 1;
        transition: .4s ease;
        font-family: Optima, Candara, 'Noto Sans', source-sans-pro, sans-serif;
    }

    time:before {
        content: '';
        display: block;
        width: 2ch;
        border-bottom: 1px solid;
        margin: .5em 0 .5em auto;
    }

    [data-hover] figcaption {
        position: absolute;
        opacity: 0;
        color: white;
    }

    [data-hover] h2 {
        transform: translateY(-1em);
    }

    [data-hover]:hover img {
        filter: sepia(1) saturate(2) brightness(.2);
    }

    [data-hover]:hover figcaption {
        opacity: 1;
        transition: .1s ease-out;
    }

    [data-hover]:hover h2 {
        transform: translateY(0);
    }
</style>

<figure data-hover={ Boolean(hover) }>
    <Image src={ image } alt={ headline }/>
    <figcaption>
        <h2>{ headline }</h2>
        <time>{ year }</time>
    </figcaption>
</figure>
