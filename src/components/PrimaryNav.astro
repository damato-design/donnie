---
import Section from "@components/Section.astro";
import Logo from "@components/Logo.astro";
import List from '@components/List.astro';
import SchemeToggle from '@components/SchemeToggle.astro';
import AudioToggle from '@components/AudioToggle.astro';
import MotionToggle from '@components/MotionToggle.astro';
import Tearout from '@components/Tearout.astro';

const primary = {
	Expertise: '/expertise',
	Projects: '/projects',
	Media: '/media',
	Connect: '/connect'
}

const colors = [
    '#e370ae',
    '#f4dd66',
    '#d8f97a',
    '#79c5f4',
];
---

<style>
    a {
        text-decoration: none;
    }

    .toggles {
        display: flex;
        flex-wrap: wrap;
        gap: 1em;
        align-items: center;
    }
</style>

<Tearout id="primary" aria-live="polite" style="flex: 2">
    <Section level="primary">
        <a slot="leading" href="/">
            <Logo/>
        </a>
        <List list={ primary } target="secondary" colors={ colors } tabs/>
        <div slot="trailing" class="toggles">
            <SchemeToggle/>
            <AudioToggle/>
            <MotionToggle/>
        </div>
    </Section>
</Tearout>