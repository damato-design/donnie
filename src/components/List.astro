---
const { list, target, tabs } = Astro.props;
---

<style>
    .list {
        perspective: 1000px;
        display: flex;
        flex-direction: column;
        gap: 16px;
        font-family: "Special Elite", monspace;
    }

    .list.tabs {
        gap: 8px;
        list-style: none;
        margin: 0;
        padding: 0;
    }

    .list.tabs li {
        font-family: "Special Elite", monspace;
        font-weight: bold;
        rotate: calc(var(--rand) * 2deg);
        background: #f3b0d0;
        transform-origin: left center;
        transform-style: preserve-3d;
        transition: 0.218s ease;
        box-shadow: 5px 2px 8px -2px rgba(20,20,20,.3);
        border-bottom: 1px solid color-mix(in oklch, #f3b0d0, black 10%);
        border-right: 1px solid color-mix(in oklch, #f3b0d0, black 10%);
    }

    .list.tabs li:hover {
        transform: rotateY(-10deg);
    }

    a {
        opacity: 0.8;
        font-size: 1.2em;
    }

    .list.tabs li a {
        display: flex;
        margin-top: 4px;
        align-items: center;
        text-decoration: none;
        padding: .75em 1em;
    }
</style>

<ol class:list={['list', { tabs }]}>
    {
        Object.entries(list).map(([label, href]) => {
            const rand = Math.random();
            return (
                <li style={`--rand: ${rand}`}>
                    <a href={href as string} data-target={target}>
                        {label}
                    </a>
                </li>
            );
        })
    }
</ol>
